<Window x:Class="PokemonWPF.PokemonInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Background="Black"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:PokemonWPF"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="PokemonInfo" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Margin="10" Grid.Column="0" Grid.Row="0" BorderBrush="DarkGray" BorderThickness="3" CornerRadius="3" Background="LightGray">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="4*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Label Margin="5" FontSize="20" Name="lblPokemonNick" Width="150" HorizontalAlignment="Left" FontStyle="Italic" FontFamily="Trebuchet MS" FontWeight="Bold" Content="Undefined"/>
                    <Label Margin="8" FontSize="20" Name="lblPokemonGenderMale" Width="40" Visibility="Collapsed" HorizontalAlignment="Left">
                        <materialDesign:PackIcon Kind = 'GenderMale' />
                    </Label>
                    <Label Margin="8" FontSize="20" Name="lblPokemonGenderFemale" Visibility="Collapsed" Width="40" HorizontalAlignment="Left">
                        <materialDesign:PackIcon Kind = 'GenderFeMale' />
                    </Label>
                </StackPanel>
                <Label Margin="5" Grid.Row="1" FontSize="18" Name="lblPokemonLvl"  HorizontalAlignment="Left" FontStyle="Italic"  FontWeight="Bold" FontFamily="Trebuchet MS" Content="Lvl" />
                <Image Grid.Row="2" Margin="5" Name="imgPokemon"/>
                <Label Margin="5" Grid.Row="3" FontSize="20" Name="lblPokemonItem"  HorizontalAlignment="Left" FontStyle="Italic" FontWeight="Bold" FontFamily="Trebuchet MS" Content="Held: None" />
            </Grid>
           
        </Border>
        <StackPanel Margin="5" Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Style="{StaticResource MaterialDesignRaisedButton}" Margin="4" Name="btnRed" Click="btnRed_Click"
     Background="IndianRed" Width="50"
                         
    Content=""  />
            <Button Click="btnYellow_Click"
    Style="{StaticResource  MaterialDesignRaisedButton}" Margin="4" Name="btnYellow" Width="50" Background="Yellow"  Content="" />
            <Button Style="{StaticResource  MaterialDesignRaisedButton}" Margin="4" Background="PaleVioletRed" Width="50" Name="btnPink" Click="btnPink_Click"
    Content=""  />

        </StackPanel>

        <Border Name="CardInfo"  Grid.Row="0" Grid.Column="1" Margin="10" BorderBrush="DarkGray" Background="IndianRed" BorderThickness="3" CornerRadius="3">
            <Grid x:Name="GridRed" Margin="5" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

            <Label HorizontalContentAlignment="Right" Grid.Row="0" Grid.Column="1" FontStyle="Italic"  FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="22" Content="DexNr:"/>
                <Label  HorizontalContentAlignment="Right" Grid.Row="1" Grid.Column="1" FontStyle="Italic"  FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="22" Content="Species:"/>
                <Label  HorizontalContentAlignment="Right" Grid.Row="3" Grid.Column="1" FontStyle="Italic"  FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="22" Content="Type:"/>
                <Label  HorizontalContentAlignment="Right" Grid.Row="4" Grid.Column="1" FontStyle="Italic"  FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="22" Content="TrainerID:"/>
                <Label  HorizontalContentAlignment="Right" Grid.Row="5" Grid.Column="1" FontStyle="Italic"  FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="22" Content="PokemonID:"/>
                <Label  HorizontalContentAlignment="Right" Grid.Row="7" Grid.Column="1" FontStyle="Italic"  FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="22" Content="XP total:"/>
                <Label  HorizontalContentAlignment="Right" Grid.Row="8" Grid.Column="1" FontStyle="Italic"  FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="22" Content="XP to level:"/>
                
                <Label Name="lblDexNr"  HorizontalContentAlignment="Left" Grid.Row="0" Grid.Column="3" FontStyle="Italic" FontFamily="Trebuchet MS" FontSize="22" Content=""/>
                <Label Name="lblSpecies"  HorizontalContentAlignment="Left" Grid.Row="1" Grid.Column="3" FontStyle="Italic" FontFamily="Trebuchet MS" FontSize="22" Content=""/>
                <WrapPanel   Grid.Row="3" Grid.Column="3">
                    <Border x:Name="borderType1" CornerRadius="10" BorderThickness="2" >
                        <Label Name="lblType1" FontFamily="Trebuchet MS" FontSize="22"></Label>
                    </Border>
                    <Border  x:Name="borderType2" CornerRadius="10" BorderThickness="2">
                        <Label Name="lblType2" FontFamily="Trebuchet MS" FontSize="22"></Label>
                    </Border>
                </WrapPanel>
                <Label Name="lblOriginalTrainer"  HorizontalContentAlignment="Left" Grid.Row="4" Grid.Column="3" FontStyle="Italic" FontFamily="Trebuchet MS" FontSize="22" Content=""/>
                <Label Name="lblPokemonID"  HorizontalContentAlignment="Left" Grid.Row="5" Grid.Column="3" FontStyle="Italic" FontFamily="Trebuchet MS" FontSize="22" Content=""/>
                <Label Name="lblTotalXp"  HorizontalContentAlignment="Left" Grid.Row="7" Grid.Column="3" FontStyle="Italic" FontFamily="Trebuchet MS" FontSize="22" Content=""/>
                <Label Name="lblXpToNextLevel"  HorizontalContentAlignment="Left" Grid.Row="8" Grid.Column="3" FontStyle="Italic" FontFamily="Trebuchet MS" FontSize="22" Content=""/>
                <ProgressBar Value="100" Grid.Row="9" Height="15" Grid.Column="1" Grid.ColumnSpan="3" Foreground="CornflowerBlue"></ProgressBar>
                </Grid>
            
            
            
        </Border>
       
        <Button Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Right" Content="Exit" Name="btnClose" Click="BtnClose_Click"></Button>
    
    </Grid>
</Window>
